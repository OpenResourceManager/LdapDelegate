[Unit]
Description=ORM LDAP Delegate Service
After=network.target

[Service]
Type=forking
ExecStart=/opt/OpenResourceManager/LdapDelegate/LdapDelegate start
ExecStop=/opt/OpenResourceManager/LdapDelegate/LdapDelegate stop
WorkingDirectory=/opt/OpenResourceManager/LdapDelegate
PIDFile=/var/run/ldap-delegate.pid
Restart=always
RestartSec=2

[Install]
WantedBy=sysinit.target
Alias=ldapDelegate.service