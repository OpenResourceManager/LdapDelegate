[Unit]
Description=ORM LDAP Delegate Service
After=multi-user.target
After=network.target
After=syslog.target

[Service]
Type=simple
ExecStart=/opt/OpenResourceManager/LdapDelegate/LdapDelegate > >(/usr/bin/tee -a /var/log/orm/LdapDelegate/run.log) 2> >(/usr/bin/tee -a /var/log/orm/LdapDelegate/error.log >&2)
Restart=on-error
RestartSec=2
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=ldap-delegate

[Install]
WantedBy=multi-user.target